<%= simple_form_for @pet do |f| %>
<%= f.input :name %>
<%= f.input :race %>
<%= f.input :age %>
<%= f.input :photos, as: :file, input_html: { multiple: true } %>
<%= f.input :description %>
<%= f.input :sexe, collection: %w[male female] %>
<%= f.submit %>

<%# Ajouter le form pour resave les modifs sur le pet et checker les droits pundit %>
