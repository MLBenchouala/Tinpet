
<div class="w-100 d-flex">
  <%= image_tag "patte2.jpg", class: "patte2"%>
</div>

<div class="d-flex">


  <div class="px-4">
    <%= cl_image_tag @pet.photos.first.key, class: "dog_image", alt: "Responsive image" %>
    <div class="my-4">


      <h2 class="pet_name"><strong><%= @pet.name %></strong></h2>
      <p><i class="fa-solid fa-cake-candles pe-2"></i><%= pluralize(@pet.age, "an") %></p>
      <p><em><%= @pet.race %></em></p>
      <p><%= @pet.description %></p>
      <div class="d-flex align-items-center">
        <%= link_to user_path(@pet.user) do %>
          <%= cl_image_tag @pet.user.photos.first.key, class: "avatar_show pet_user_border me-2" %>
        <% end %>
        <div>
          <div>
          <strong><%= @pet.user.name %></strong>
          </div>
          <div class="pet_user_size">
            <%= @pet.user.age %> ans
          </div>
        </div>
      </div>
    </div>

      <% if policy(@pet).edit? %>
      <%= link_to "Edit this pet", edit_pet_path(@pet) %> |
      <% end %>
      <%= button_to "Destroy this pet", @pet, method: :delete if policy(@pet).destroy? %>
    <div>
  </div>
</div>
